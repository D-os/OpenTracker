SubDir LOCALE_TOP add-ons collators ;

rule Collator
{
	# Collator <sources> ;
	local sources = $(1) ;
	local name = $(sources[1]:B) ;
	local rsrc = $(name:S=.rsrc) ;
	AddResources $(name) : $(rsrc) ;
	AddOn $(name) : $(sources) : be liblocale.so ;
}

Collator DeutschDIN-2.cpp ;
Collator Fran√ßais.cpp ;

